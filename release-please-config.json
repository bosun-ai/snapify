{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "handle-changelog": false,
  "packages": {
    "snapify": {
      "path": "snapify",
      "release-type": "node",
      "handle-changelog": false,
      "include-component-in-tag": true,
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "json",
          "path": "snapify/package-lock.json",
          "jsonpath": "$.version"
        }
      ]
    }
  }
}
