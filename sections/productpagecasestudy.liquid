{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .multicolumn-card__info p {
    text-align: left;
    /* hyphens: auto;
    -webkit-hyphens: auto; */
    -webkit-user-select: none;-moz-user-select: none;user-select: none;
    }
  .anchor {
    padding-top: 10%; 
    margin-top: -10%;
  }
  .centertext p {
    text-align: center;
  }
  .left-top-triangle {
    width: 0;
    height: 0;
    border-style: solid;
    border-width: calc(100vw/8) calc(100vw/6.5) 0 0;
    border-color: #2255ff transparent transparent transparent;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1; /* Ensure the triangle appears above other content if needed */
    display: block !important;
  }
  .right-top-triangle {
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 calc(100vw/6.5) calc(100vw/8) 0;
    border-color: transparent #2255ff transparent transparent;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 1; /* Ensure the triangle appears above other content if needed */
    display: block !important;
  }
  .left-bottom-triangle {
    width: 0;
    height: 0;
    border-style: solid;
    border-width: calc(100vw/8) 0 0 calc(100vw/6.5);
    border-color: transparent transparent transparent #2255ff;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 1; /* Ensure the triangle appears above other content if needed */
    display: block !important;
  }
  .right-bottom-triangle {
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 0 calc(100vw/8) calc(100vw/6.5);
    border-color: transparent transparent #2255ff transparent;
    position: absolute;
    bottom: 0;
    right: 0;
    z-index: 1; /* Ensure the triangle appears above other content if needed */
    display: block !important;
  }

  .multicolumn-card__image {
    max-width: 100%;
    max-height: 100%;
    padding: 10px;
  }
  .svg-arrow {
    transform: rotate(180deg);
    transition: transform 0.3s ease; /* Smooth transition for rotation */
  }

  .collapsed {
    transform: rotate(0deg); /* Rotate arrow 90 degrees when collapsed */
  }

  @media (max-width: 600px) {
      .productcasestudy {
        padding: 3rem!important
      }
    }

  @media screen and (max-width: 749px) {
    .multicolumn .page-width {
        padding-left: 1.5rem!important;
        padding-right: 1.5rem!important;
    }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}
<script>
    var sectionsToHide = ['casestudySubtitle'];
    {%- for block in section.blocks -%}
        {% if block.settings.section_id != blank %}
            sectionsToHide.push('shopify-section-{{block.settings.section_id}}');
        {% endif %}
    {% endfor %}
    console.log(sectionsToHide);
</script>

<div class="multicolumn {% if section.settings.background_color == blank %} color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% endif %}{% if section.settings.title == blank %} no-heading{% endif %}"
  style="position: relative; {% if section.settings.background_color != "" %}background-color:{{section.settings.background_color}}{% endif %}">
    <div class="page-width section-{{ section.id }}-padding productcasestudy">
    {%- unless section.settings.title == blank -%}
        <div style="display: flex; margin-bottom: 3rem">
            <div class="title-wrapper-with-link title-wrapper--no-top-margin" style="margin-bottom: 0">
                <{{ section.settings.heading_size_google }} class="title {{ section.settings.heading_size }}" style="{% if section.settings.heading_center %}margin: auto;{% endif %}">
                    {{ section.settings.title | replace: '\n', '<br>' }}
                    </{{ section.settings.heading_size_google }}>
                    {%- if section.settings.button_label != blank and show_mobile_slider -%}
                    <a href="{{ section.settings.button_link }}" class="link underlined-link large-up-hide">{{ section.settings.button_label | escape }}</a>
                    {%- endif -%}
            </div>
            {% if section.settings.make_hidden %}
                <div style="margin-left: 2rem">
                    <div
                    class="iconhomepage"
                    style="
                        background-color:#fafafa; border-radius: 30%;z-index: 1;position: relative;
                        box-shadow: 0 10px 20px -10px rgba(0, 0, 0, 1);width: 5rem; height: 5rem;margin: auto;margin-bottom: 1rem;cursor:pointer;
                    "
                    >
                      <div id="casestudy-arrow" onclick="toggleCaseStudy(this)" style="width:100%;height:100%;padding:10px" class="svg-arrow">
                        {% render 'icon-arrow-rounded' %}
                      </div>
                    <!-- <svg onclick="toggleCaseStudy(this)" style="width:100%;height:100%;padding:5px" class="svg-arrow collapsed" width="20.593" height="22.88" viewBox="0 0 80.593 122.88"><polygon style="fill:#2255ff;" points="0,0 30.82,0 80.593,61.44 30.82,122.88 0,122.88 49.772,61.44 0,0"></polygon></svg> -->
                    </div>
                </div>
            {% endif %}
        </div>
      <div id="casestudySubtitle" style="margin-bottom: 3rem;-webkit-user-select: none;-moz-user-select: none;user-select: none;">{{section.settings.subtitle}}</div>
    {%- endunless -%}
    
    <div>{{ section.settings.bottom_text }}</div>
    <div class="center{% if show_mobile_slider %} small-hide medium-hide{% endif %}">
      {%- if section.settings.button_label != blank -%}
        <a class="button button--primary"{% if section.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link }}"{% endif %}>
          {{ section.settings.button_label | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>
<script>
  function toggleCaseStudy(arrow) {
    if (typeof arrowOpened !== "undefined" && typeof toggleTextProduct !== "undefined") {
      if(arrowOpened !== null) {
        toggleTextProduct(sectionIdOpened, '', arrowOpened);
      }
    }
    arrow.classList.toggle('collapsed');
    sectionsToHide.forEach(function(sectionId) {
        console.log(sectionId);
        const text = document.getElementById(sectionId);
        if (text) { // Check if the element exists
            if (text.style.display === 'none') {
                text.style.display = 'block';
            } else {
                text.style.display = 'none';
            }
        }
    });
  }

  document.addEventListener('DOMContentLoaded', function() {
    toggleCaseStudy(document.getElementById('casestudy-arrow'));
});
</script>
