    case 'created':
      return {'status': 'Uploaded', 'color': '#2255ff', 'description': 'Report was uploaded, will now be sorted', 'input_status': 'created', 'position': 0};
    case 'in_progress':
      return {'status': 'In Progress', 'color': '#2255ff', 'description': 'Report is being processed', 'input_status': 'in_progress', 'position': 1};
    case 'metadata_extracted':
      return {'status': 'Sorted', 'color': '#2255ff', 'description': 'Report was sorted, data will now be extracted', 'input_status': 'metadata_extracted', 'position': 2};
    case 'data_extracted':
      return {'status': 'Data Extracted', 'color': '#2255ff', 'description': 'Data was extracted, will now be submitted', 'input_status': 'data_extracted', 'position': 3};
    case 'wait_confirmation':
      return {'status': 'Created', 'color': '#2255ff', 'description': 'Report was created', 'input_status': 'wait_confirmation', 'position': 4};
    case 'submitted':
      return {'status': 'Submitted', 'color': '#2255ff', 'description': 'Report was submitted, will now be validated', 'input_status': 'submitted', 'position': 5};
    case 'validated':
      return {'status': 'Validated', 'color': '#21FF3D', 'description': 'Report was validated', 'input_status': 'validated', 'position': 6};
    case 'done': 
      return {'status': 'Completed', 'color': '#21FF3D', 'description': 'Report is completed', 'input_status': 'done', 'position': 7};
    case 'deferred':
