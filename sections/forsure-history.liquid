function sortTimeframeYear(periods) {
  periods.sort((a, b) => {
    function parsePeriod(p) {
      // Extract year from the end or the whole string
      const yearMatch = p.match(/\b(\d{4})\b/);
      const year = yearMatch ? parseInt(yearMatch[1], 10) : 0;
      
      // Check for date ranges like "01.07 - 31.12 2025"
      if (p.includes(' - ') && p.includes('.')) {
        // Extract the end date (the second date in the range)
        const dateRangeMatch = p.match(/(\d{2})\.(\d{2})\s*-\s*(\d{2})\.(\d{2})\s+(\d{4})/);
        if (dateRangeMatch) {
          const [, startDay, startMonth, endDay, endMonth, yearStr] = dateRangeMatch;
          const month = parseInt(endMonth, 10) - 1; // 0-indexed
          const day = parseInt(endDay, 10);
          return new Date(parseInt(yearStr, 10), month, day).getTime();
        }
      }
      
      // Check for month formats like "09-September 2025" or "06-June 2025"
      // Use end date (last day of month)
      const monthMatch = p.match(/^(\d{2})-(\w+)\s+(\d{4})$/);
      if (monthMatch) {
        const [, monthNum, , yearStr] = monthMatch;
        const monthIdx = parseInt(monthNum, 10) - 1; // 0-indexed
        // Last day of month: new Date(year, month+1, 0)
        return new Date(parseInt(yearStr, 10), monthIdx + 1, 0).getTime();
      }
      
      // Check for quarters like "Q2 2025", "Q3 2025"
      // Use end date (last day of last month in quarter)
      // Add small offset (1 day) so quarters appear before individual months with same end date
      const quarterMatch = p.match(/^Q([1-4])\s+(\d{4})$/i);
      if (quarterMatch) {
        const [, quarter, yearStr] = quarterMatch;
        // Quarters: Q1=Jan-Mar(0-2), Q2=Apr-Jun(3-5), Q3=Jul-Sep(6-8), Q4=Oct-Dec(9-11)
        // End month: Q1=Mar(2), Q2=Jun(5), Q3=Sep(8), Q4=Dec(11)
        const endMonthIdx = parseInt(quarter, 10) * 3 - 1; // Last month of quarter
        // Last day of month: new Date(year, month+1, 0)
        // Add 1 day (86400000 ms) so quarters sort before individual months
        return new Date(parseInt(yearStr, 10), endMonthIdx + 1, 0).getTime() + 86400000;
      }
      
      // Check for semesters like "S1 2025" (first half: Jan-Jun), "S2 2025" (second half: Jul-Dec)
      // Use end date (last day of last month in semester)
      // Add small offset (2 days) so semesters appear before quarters and months with same end date
      const semesterMatch = p.match(/^S([12])\s+(\d{4})$/i);
      if (semesterMatch) {
        const [, semester, yearStr] = semesterMatch;
        // S1 = Jan-Jun (ends June=5), S2 = Jul-Dec (ends December=11)
        const endMonthIdx = parseInt(semester, 10) === 1 ? 5 : 11; // June or December
        // Last day of month: new Date(year, month+1, 0)
        // Add 2 days (172800000 ms) so semesters sort before quarters and months
        return new Date(parseInt(yearStr, 10), endMonthIdx + 1, 0).getTime() + 172800000;
      }
      
      // Year-only format like "2025" or "2024"
      if (/^\d{4}$/.test(p.trim())) {
        // Place at the end of the year (December)
        return new Date(parseInt(p.trim(), 10), 11, 31).getTime();
      }
      
      // Fallback for unrecognized formats
      return new Date(year || 0, 0, 1).getTime();
    }
  
    // Sort descending (newest first)
    return parsePeriod(b) - parsePeriod(a);
  });
  return periods;
}

