              const filenames = [...new Set(reportsInTimeframe.map(r => r['filename']))].sort();
              toggleSubItems(
                timeframeDiv,
                filenames,
                normalizeIds(`fileDiv-${reportDiv.id}-${year}-${timeframe}`),
                groupBy(reportsInTimeframe, 'filename'),
                depth2 + 1,
                (fileDiv, filename, depth3, finalLevel, childs) => {
                  fillFolderRow(fileDiv, filename, depth3, finalLevel, childs);
                  fileDiv.addEventListener('click', e => {
                    e.stopPropagation();
