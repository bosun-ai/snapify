        const withoutTimeframe = reportsInYear.filter(r => !r['timeframe'] || r['timeframe'].trim() === '');
      
        const timeframes = [...new Set(withTimeframe.map(r => r['timeframe']))].sort();
      
        timeframe_selected_div = null;
