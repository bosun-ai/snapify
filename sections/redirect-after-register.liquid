{% schema %}
  {
    "name": "t:sections.redirect-after-register.name",
    "settings": [
      {
        "type": "text",
        "id": "newpage",
        "default": "/pages/account-activation",
        "label": "New Page"
      }
    ],
    "presets": [
      {
        "name": "t:sections.redirect-after-register.presets.name"
      }
    ]
  }
{% endschema %}
<script>
function readCookie(name) {
  var nameEQ = name + "=";
  var ca = document.cookie.split(';');
  for(var i=0;i < ca.length;i++) {
      var c = ca[i];
      while (c.charAt(0)==' ') c = c.substring(1,c.length);
      if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
  }
  return null;
}

  if(readCookie('recentlyRegistered') !== null) {
    window.location.href = '{{ section.settings.newpage }}';
  }
</script>