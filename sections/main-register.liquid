{% style %}
    .hero-gradient {
    display: flex;
    justify-content: center; /* Horizontally center */
    align-items: center; /* Vertically center */
    flex-direction: column; /* Stack children vertically */
    background: linear-gradient(110deg, #2c2b30 60%, #2255ff);
    height: auto;
    min-height: calc(100vh - 11rem);
    width: 100%;
    position: relative;
  }
  #rightSide {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: none!important;
  padding-top: 20px;
  /* gap: 20px;
  padding: 20px; */
}

.freeplanitems {
  /* padding: 20px; */
  text-align: center;
  
}

/* Adjusted grid placement */
.freeplanitems:nth-child(1) {
  grid-column: 2 / span 2;
  grid-row: 1; /* The first item spans the first two rows */
}

.freeplanitems:nth-child(2) {
  grid-column: 1 / span 2;
  grid-row: 2; /* The second item starts at the first row and spans two rows */
  margin-top: -2%;
}

.freeplanitems:nth-child(3) {
  grid-column: 3 / span 2;
  grid-row: 2; /* The third item starts at the third row and spans two rows */
  margin-top: -2%;
}
  .iconcontainer {
    background:#fafafa;
    width: fit-content;
    width: 130px;
    height: 130px;
    border-radius: 1rem;
    margin: auto;
    justify-content: center;
    align-items: center;
    display: flex;
    box-shadow: 0 10px 20px -10px rgba(0, 0, 0, 1);
  }
    .field {
    width: 90%;
    margin: 0 auto 20px auto;
  }
  .field__input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-bottom: 10px;
    box-sizing: border-box; /* Ensures padding does not affect width */
  }
  .button--primary {
    width: 90%;
    padding: 10px;
    border: none;
    border-radius: 4px;
    display: block;
    margin: 20px auto;
  }
  .field__input::placeholder {
  color: #888; /* Placeholder text color */
}
  .textright {
    color: #fafafa;
    width: 58%;
    padding-top:1%;
    margin: auto;
  }
  .registerContainer {
    width: 40rem;
    border-radius: 3rem;
    overflow: hidden;
    height: fit-content;
    margin-right:2%;
    margin-top: 1%;
  }
  @media(max-width: 850px) {
    .registerMain {
      flex-direction: column;
      margin-top: 5%;
    }
    .rightSidecontainer {
      margin: auto;
    }
    .registerContainer {
      margin: auto;
      max-width: 90%;
    }
    .freeplanitems:nth-child(1) {
      grid-column: 1 / span 4;
      grid-row: 1; /* The first item spans the first two rows */
    }

    .freeplanitems:nth-child(2) {
      grid-column: 1 / span 4;
      grid-row: 2; /* The second item starts at the first row and spans two rows */
      margin-top: 0%;
    }

    .freeplanitems:nth-child(3) {
      grid-column: 1 / span 4;
      grid-row: 3; /* The third item starts at the third row and spans two rows */
      margin-top: 0%;
    }
}
@media(max-width: 360px) {
  .registerContainer {
      margin: auto;
      max-width: 75%;
    }
}
