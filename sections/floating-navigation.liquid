{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .multicolumn-card {
    background: none;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .page-width-wide {
    padding: 0 2rem;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .multicolumn-card__info p {
    text-align: left;
    /* hyphens: auto;
    -webkit-hyphens: auto;  */
    }

  @media screen and (min-width: 990px) {
    .grid--3-col-desktop .grid__item {
      max-width: 100%;
    }
  }
  /* #navbar-side {
    display: none;
  } */
  /* @media screen and (min-width: 1440px) {
    #navbar-side {
      display: block;
    }
    ul{
      float: left; width: fit-content;position: fixed;z-index:9999;
  
    }
  } 
  */
   #ul-submenu {
      display: flex;
     /* justify-content: space-between; */
     
     align-items: flex-start;
    }
  #ul-submenu li {
    white-space: nowrap;
  }
  @media screen and (min-width: 1100px){
     #ul-submenu {
      /* justify-content: space-evenly; */
     justify-content:center;
    }
  }

{%- endstyle -%}
{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div id="navbar-side" class="page-width multicolumn color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %}">
  <!-- <nav> -->
        <slider-component class="slider-mobile-gutter">
  <ul class="color-{{ section.settings.color_scheme }} grid grid--peek grid--3-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop slider slider--tablet collection-list--{{ section.blocks.size }}-items" style="border-radius:2rem;padding:2rem;overflow-x: auto"
    id="ul-submenu"
        role="list">
    {%- for link in section.settings.menu.links -%}
      {% if link.current %}
        <li id="list-element-{{ forloop.index }}-active" class="list-element-active grid__item slider__slide slider__slide--full-width" style="width:fit-content;max-width:fit-content;min-width:fit-content">
        <a href="{{ link.url }}" id="{{ forloop.index }}" class="header__menu-item list-menu__item link link--text focus-inset content-link" data-url="{{ link.url }}"
            style="display: flex;flex-wrap: nowrap;
          border-radius: 2rem;background-color:#2255FF;list-style-type: none;width:fit-content;max-width:fit-content;padding-left:1rem;padding-right:1rem">
          <span style="color:#FAFAFA;">{{ link.title | escape }}</span>
              <!-- <svg class="arrow" style="width: 12px; height: 12px" viewBox="160.229 181.99 122.879 66.904" xmlns="http://www.w3.org/2000/svg">
              <g transform="matrix(1, 0, 0, 1, 160.228716, 181.983432)">
                  <g transform="translate(61.5, 33.5) rotate(90) translate(-61.5, -33.5)">
                      <path d="M11.68,64.96c-2.72,2.65-7.08,2.59-9.73-0.14c-2.65-2.72-2.59-7.08,0.13-9.73L56.87,1.97l4.8,4.93l-4.81-4.95 c2.74-2.65,7.1-2.58,9.76,0.15c0.08,0.08,0.15,0.16,0.23,0.24L120.8,55.1c2.72,2.65,2.78,7.01,0.13,9.73 c-2.65,2.72-7,2.78-9.73,0.14L61.65,16.5L11.68,64.96L11.68,64.96z" style="fill: rgb(250, 250, 250);"></path>
                  </g>
              </g>
            </svg> -->
        </a>
      </li>
    {% else %}
      {% if link.title contains "--------" %}
        <!-- <hr style="margin:2rem"> -->
        {% else %}
        <li id="list-element-{{ forloop.index }}" class="list-element grid__item slider__slide slider__slide--full-width" style="width:fit-content;max-width:fit-content;min-width:fit-content">
          <a href="{{ link.url }}" id="{{ forloop.index }}" class="header__menu-item list-menu__item link link--text focus-inset content-link" data-url="{{ link.url }}"  {% if link.current %}aria-current="page"{% endif %}
        style="width:fit-content;max-width:fit-content;padding-left:1rem;padding-right:1rem">
            <span style="">{{ link.title | escape }}</span>
          </a>
        </li>
        {% endif %}
      {% endif %}
    {% endfor %}
  </ul>
          {%- if show_mobile_slider -%}
        <div class="slider-buttons no-js-hidden">
          <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-caret' %}</button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
              <span aria-hidden="true"> / </span>
              <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.blocks.size }}</span>
          </div>
          <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-caret' %}</button>
        </div>
      {%- endif -%}
          </slider-component>
  <!-- </nav> -->
</div>


{% schema %}
{
  "name": "t:sections.navigationfloat.name",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Floating Navigation Menu",
      "label": "t:sections.navigationfloat.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "select",
      "id": "image_width",
      "options": [
        {
          "value": "third",
          "label": "t:sections.navigationfloat.settings.image_width.options__1.label"
        },
        {
          "value": "half",
          "label": "t:sections.navigationfloat.settings.image_width.options__2.label"
        },
        {
          "value": "full",
          "label": "t:sections.navigationfloat.settings.image_width.options__3.label"
        }
      ],
      "default": "full",
      "label": "t:sections.navigationfloat.settings.image_width.label"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.navigationfloat.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.navigationfloat.settings.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.navigationfloat.settings.image_ratio.options__3.label"
        },
        {
          "value": "circle",
          "label": "t:sections.navigationfloat.settings.image_ratio.options__4.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.navigationfloat.settings.image_ratio.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "t:sections.navigationfloat.settings.columns_desktop.label"
    },
    {
      "type": "select",
      "id": "column_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.navigationfloat.settings.column_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.navigationfloat.settings.column_alignment.options__2.label"
        }
      ],
      "default": "left",
      "label": "t:sections.navigationfloat.settings.column_alignment.label"
    },
    {
      "type": "select",
      "id": "background_style",
      "options": [
        {
          "value": "none",
          "label": "t:sections.navigationfloat.settings.background_style.options__1.label"
        },
        {
          "value": "primary",
          "label": "t:sections.navigationfloat.settings.background_style.options__2.label"
        }
      ],
      "default": "primary",
      "label": "t:sections.navigationfloat.settings.background_style.label"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button label",
      "label": "t:sections.navigationfloat.settings.button_label.label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.navigationfloat.settings.button_link.label"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:sections.navigationfloat.settings.menu.label"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "header",
      "content": "t:sections.navigationfloat.settings.header_mobile.content"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "t:sections.navigationfloat.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.navigationfloat.settings.columns_mobile.options__2.label"
        }
      ],
      "default": "2",
      "label": "t:sections.navigationfloat.settings.columns_mobile.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "t:sections.navigationfloat.blocks.column.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.navigationfloat.blocks.column.settings.image.label"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Column",
          "label": "t:sections.navigationfloat.blocks.column.settings.title.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.navigationfloat.blocks.column.settings.text.label"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "t:sections.navigationfloat.blocks.column.settings.link_label.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.navigationfloat.blocks.column.settings.link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.navigationfloat.presets.name",
      "blocks": [
      ]
    }
  ]
}
{% endschema %}
