      <script>
        async function getNavbarElements() {
            try {
                var data = await unifiedSendRequest(NAVBAR, {method: 'GET', headerArgs: {'Content-Type': 'application/json'}});
                console.log(data);
                var available_url = null;
                for (const [nav_element, show] of Object.entries(data)) {
                      if (!show) {
                          // Add 'greyed_out' class to elements that should be hidden or disabled
                          const element = document.getElementById(`a-${nav_element}`);
                          const wrapper = document.getElementById(`list-element-${nav_element}`);
                          if (element) {
                              element.classList.add('greyed_out');
                              wrapper.classList.add('greyed_out_wrapper');
                          }
                      } else if (available_url === null) {
                        available_url = nav_element;
                      }
                 }
                if (data['{{ currentLink }}'] === false) {
                    console.log("You don't have access to this site, redirecting you.");
                    if (available_url === null) {
                      window.location.href = '/';
                    }
                    
                    window.location.href = `{{ currentPath }}/${available_url}`;
                }
                if (data['{{ currentLink }}?logged_in'] === false) {
                  console.log("You don't have access to this site, redirecting you.");
                  if (available_url === null) {
                      window.location.href = '/';
                    }
                    window.location.href = `{{ currentPath }}/pages/${available_url}`;
                }
            } catch (error) {
                console.error('Failed to get navigation:', error);
                showMessage('Failed to get navigation: ' + error.message, false);
            }
        }
        getNavbarElements()
      </script>
