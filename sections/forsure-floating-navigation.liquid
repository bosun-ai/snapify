#reopenButton {
    position: fixed;      /* Fixed positioning to keep it on the viewport */
    top: 90%;             /* Center it vertically */
    left: 2%;              /* Position it on the left side */
    transform: translateY(-50%); /* Centering adjustment */
    z-index: 1000;        /* Ensure it's above other elements */
    cursor: pointer;      /* Pointer cursor for better UX */
    background-color: #17161C; /* Background color as provided */
    color: {{ section.settings.text_color_button }}; /* Color from the provided style */
    border: none;         /* Remove any default borders */
    display: none;        /* Initially hidden */
    width: fit-content;   /* Make width fit the content */
    height: fit-content;  /* Make height fit the content */
}

.greyed_out {
    cursor: not-allowed;
    background-color: grey;
    opacity: 0.5;
    position: relative; /* Needed for positioning the tooltip */
    pointer-events: none; /* Disable clicks on links */
    color: inherit; /* Ensure the link text doesn't look like a link */
    text-decoration: none; /* Remove underline or other link styles */
}

.greyed_out_wrapper:hover .greyedout-tooltip {
    display: block; /* Show the tooltip on hover */
}

.greyedout-tooltip {
    display: none; /* Hide the tooltip by default */
    position: absolute;
    top: 100%; /* Position above the element */
    background: red;
    color: white;
    padding: 0.5rem;
    font-size: 0.9rem;
    border-radius: 5px;
    white-space: nowrap;
    z-index: 1000;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}


