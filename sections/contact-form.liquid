              {{ section.settings.image2 | image_url: width: 1500 | image_tag:
                loading: 'lazy',
                sizes: sizes,
                widths: '165, 360, 535, 750, 1070, 1500',
                id: 'img2'
              }}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
             <h5 class="img-title">
