                    loading: 'lazy',
                    sizes: sizes,
                    widths: '165, 360, 535, 750, 1070, 1500',
                    id: 'img1'
                }}
            {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
