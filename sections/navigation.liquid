{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .multicolumn-card {
    background: none;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .page-width-wide {
    padding: 0 2rem;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .multicolumn-card__info p {
    text-align: left;
    /* hyphens: auto;
    -webkit-hyphens: auto;  */
    }

  @media screen and (min-width: 990px) {
    .grid--3-col-desktop .grid__item {
      max-width: 100%;
    }
  }

{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div class="page-width-wide multicolumn color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %}">
  <div class="section-{{ section.id }}-padding isolate">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="title {{ section.settings.heading_size }}">
          {{ section.settings.title | escape }}
        </h2>
        {%- if section.settings.button_label != blank and show_mobile_slider -%}
          <a href="{{ section.settings.button_link }}" class="link underlined-link large-up-hide">{{ section.settings.button_label | escape }}</a>
        {%- endif -%}
      </div>
    {%- endunless -%}
    <slider-component class="slider-mobile-gutter">
      <ul class="multicolumn-list contains-content-container grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop{% if show_mobile_slider %} slider slider--mobile grid--peek{% endif %}"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- liquid
          assign highest_ratio = 0
          for block in section.blocks
            if block.settings.image.aspect_ratio > highest_ratio
              assign highest_ratio = block.settings.image.aspect_ratio
            endif
          endfor
        -%}
        <li id="Slide-{{ section.id }}-0" class="multicolumn-list__item {% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{{ empty_column }}" {{ block.shopify_attributes }}
        style="float: left; width: 15%;position: fixed;z-index:1000">
          {% assign block = section.blocks[0] %}
          <div class="multicolumn-card content-container menu-left" style="background: none;">
              {%- if block.settings.image != blank -%}
                {% if section.settings.image_ratio == 'adapt' or section.settings.image_ratio == 'circle' %}
                  {% assign spaced_image = true %}
                {% endif %}
                <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}">
                  <div class="media media--transparent media--{{ section.settings.image_ratio }}"
                    {% if section.settings.image_ratio == 'adapt' %}
                      style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                    {% endif %}>
                    {%- capture sizes -%}(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %}, (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %}, calc(100vw - 30px){%- endcapture -%}
                    {{ block.settings.image | image_url: width: 1420 | image_tag:
                      loading: 'lazy',
                      sizes: sizes,
                      widths: '275, 550, 710, 1420',
                      class: 'multicolumn-card__image'
                    }}
                  </div>
                </div>
              {%- endif -%}
              <div class="multicolumn-card__info">
                {%- if block.settings.title != blank -%}
                  <h2 class="h3">{{ block.settings.title | escape }}</h2>
                {%- endif -%}
                <nav class="header__inline-menu">
                  <ul class="list-menu" role="list">
                    {%- for link in section.settings.menu.links -%}
                      <li id="list-element-{{ forloop.index }}" class="list-element" style="display:block {% if link.url == '/pages/the-ultimate-epr-reporting-guide' %}border-top:2px solid #2255FF{% endif %}">
                        <a href="#" id="{{ forloop.index }}" class="header__menu-item list-menu__item link link--text focus-inset content-link" data-url="{{ link.url }}" {% if link.current %} aria-current="page"{% endif %}>
                          <span {%- if link.current %} class="header__active-menu-item"{% endif %} style="">{{ link.title | escape }}</span>
                        </a>
                      </li>
                    <li id="list-element-{{ forloop.index }}-active" class="list-element-active" style="border-radius: 2rem;background-color:#2255FF;display:none">
                        <a href="#" id="{{ forloop.index }}" class="header__menu-item list-menu__item link link--text focus-inset content-link" data-url="{{ link.url }}" {% if link.current %} aria-current="page"{% endif %}
                            style="display: flex;justify-content: space-between;flex-wrap: nowrap;">
                          <span {%- if link.current %} class="header__active-menu-item"{% endif %} style="color:#FAFAFA;">{{ link.title | escape }}</span>
                              <svg class="arrow" style="width: 12px; height: 12px" viewBox="160.229 181.99 122.879 66.904" xmlns="http://www.w3.org/2000/svg">
                              <g transform="matrix(1, 0, 0, 1, 160.228716, 181.983432)">
                                  <g transform="translate(61.5, 33.5) rotate(90) translate(-61.5, -33.5)">
                                      <path d="M11.68,64.96c-2.72,2.65-7.08,2.59-9.73-0.14c-2.65-2.72-2.59-7.08,0.13-9.73L56.87,1.97l4.8,4.93l-4.81-4.95 c2.74-2.65,7.1-2.58,9.76,0.15c0.08,0.08,0.15,0.16,0.23,0.24L120.8,55.1c2.72,2.65,2.78,7.01,0.13,9.73 c-2.65,2.72-7,2.78-9.73,0.14L61.65,16.5L11.68,64.96L11.68,64.96z" style="fill: rgb(250, 250, 250);"/>
                                  </g>
                              </g>
                            </svg>
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                </nav>
              </div>
            </div>
          </li>
          
          
          <li id="Slide-{{ section.id }}-1" class="multicolumn-list__item {% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{{ empty_column }}" {{ block.shopify_attributes }}
          style="padding-left:15%">
            <div class="multicolumn-card content-container content-right" style="background: none;">
              {% assign block = section.blocks[1] %}
              {%- if block.settings.image != blank -%}
                {% if section.settings.image_ratio == 'adapt' or section.settings.image_ratio == 'circle' %}
                  {% assign spaced_image = true %}
                {% endif %}
                <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}">
                  <div class="media media--transparent media--{{ section.settings.image_ratio }}"
                    {% if section.settings.image_ratio == 'adapt' %}
                      style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                    {% endif %}>
                    {%- capture sizes -%}(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %}, (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %}, calc(100vw - 30px){%- endcapture -%}
                    {{ block.settings.image | image_url: width: 1420 | image_tag:
                      loading: 'lazy',
                      sizes: sizes,
                      widths: '275, 550, 710, 1420',
                      class: 'multicolumn-card__image'
                    }}
                  </div>
                </div>
              {%- endif -%}
              <div class="multicolumn-card__info">
                {%- if block.settings.title != blank -%}
                  <h2 class="h3">{{ block.settings.title | escape }}</h2>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <div class="rte" style="border-left:1px solid #17161c;">{{ block.settings.text }}</div>
                {%- endif -%}
                {%- if block.settings.link_label != blank -%}
                  <a class="link animate-arrow" {% if block.settings.link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.link }}"{% endif %}>{{ block.settings.link_label | escape }}<span class="icon-wrap">&nbsp;{% render 'icon-arrow' %}</span></a>
                {%- endif -%}
              </div>
            </div>
          </li>
      </ul>

      {%- if show_mobile_slider -%}
        <div class="slider-buttons no-js-hidden medium-hide">
          <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-caret' %}</button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.blocks.size }}</span>
          </div>
          <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-caret' %}</button>
        </div>
      {%- endif -%}
    </slider-component>
    <div class="center{% if show_mobile_slider %} small-hide medium-hide{% endif %}">
      {%- if section.settings.button_label != blank -%}
        <a class="button button--primary"{% if section.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link }}"{% endif %}>
          {{ section.settings.button_label | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  $(document).ready(function() {
    $('.content-link').on('click', function(e) {
        e.preventDefault(); // prevent default link action
        
        var contentURL = $(this).data('url');
        var clickedElementId = $(this).attr('id');
        $('.list-element-active').each(function() { // hide all active ones
            $(this).css('display', 'none');
        });
        $('.list-element').each(function() { // show all inactive ones
              $(this).css('display', 'block');
          });
        // now do something about the clicked element
        var activeElement = $('#list-element-' + clickedElementId + '-active');
        var inactiveElement = $('#list-element-' + clickedElementId);
        
        activeElement.css('display', 'block');
        inactiveElement.css('display', 'none');
      
        // Fetch the content from the specified URL
        $.get(contentURL, function(data) {
          // var content = $(data).find('article').parent().html();
          var contentData = $(data);
          // var content = $(data).find('section').parent().html();
          contentData.find('.multicolumn-card').removeClass('multicolumn-card');
          var content = contentData.find('section').parent().html();
            // Assuming the data returned is pure text or HTML content
            $('#Slide-{{ section.id }}-1 .rte').html(content);
        });
    });
    // Trigger the click event for the first .content-link element to load its content by default
    $('.content-link').first().trigger('click');
});
</script>

