{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{{ 'section-text-with-text.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

{%- endstyle -%}
<div class="image-with-text image-with-text--{{ section.settings.content_layout }} page-width isolate section-{{ section.id }}-padding">
  <slider-component class="slider-mobile-gutter">
      <ul class="ul-with-swipeable multicolumn-list contains-content-container multicolumn-grid grid grid--1-col-tablet-down grid--2-col-desktop{% if section.settings.swipe_on_mobile %} slider slider--mobile grid--peek{% endif %}"
        id="Slider-{{ section.id }}" style="{% if section.settings.center_columns %}justify-content: center;{% endif %}"
        role="list"
      >
          <div id="Slide-{{ section.id }}-1" class="text-with-text-swipeable image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} content-container multicolumn-list__item grid__item2 grid--2--item2 {% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{{ empty_column }} text-with-text-1" {{ block.shopify_attributes }}>
          {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'heading' -%}
                  <{{ block.settings.heading_size_google }} class="image-with-text__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                    {{ block.settings.heading | newline_to_br }}
                  </{{ block.settings.heading_size_google }}>
                {%- when 'caption' -%}
                  <p class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}" {{ block.shopify_attributes }}>{{ block.settings.caption | escape }}</p>
                {%- when 'text' -%}
                  <div class="image-with-text__text image-with-text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
                {%- when 'button' -%}
                  {%- if block.settings.button_label != blank -%}
                    <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}" {{ block.shopify_attributes }}>
                      {{ block.settings.button_label | escape }}
                    </a>
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
          <div id="Slide-{{ section.id }}-2" class="text-with-text-swipeable image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height2 }} gradient color-{{ section.settings.color_scheme2 }} content-container multicolumn-list__item grid__item2 grid--2--item2 {% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{{ empty_column }} text-with-text-2" {{ block.shopify_attributes }}>
            {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'heading2' -%}
                  {% if block.settings.heading_size2 == "special" %}
                    <h1 class="image-with-text__heading" {{ block.shopify_attributes }}>
                      {{ block.settings.heading2 | newline_to_br }}
                    </h1>
                  {% else %}
                  <{{ block.settings.heading_size_google2 }} class="image-with-text__heading {{ block.settings.heading_size2 }}" {{ block.shopify_attributes }}>
                    {{ block.settings.heading2 | newline_to_br }}
                  </{{ block.settings.heading_size_google2 }}>
                    {% endif %}
                {%- when 'caption2' -%}
                  <p class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style2 }} {{ block.settings.text_style2 }}--{{ block.settings.text_size2 }} {{ block.settings.text_style2 }}" {{ block.shopify_attributes }}>{{ block.settings.caption2 | escape }}</p>
                {%- when 'text2' -%}
                  <div class="image-with-text__text rte {{ block.settings.text_style2 }}" {{ block.shopify_attributes }}>{{ block.settings.text2 }}</div>
                {%- when 'button2' -%}
                  {%- if block.settings.button_label2 != blank -%}
                    <a{% if block.settings.button_link2 == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link2 }}"{% endif %} class="button{% if block.settings.button_style_secondary2 %} button--secondary{% else %} button--primary{% endif %}" {{ block.shopify_attributes }}>
                      {{ block.settings.button_label2 | escape }}
                    </a>
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
      </ul>

      {%- if section.settings.swipe_on_mobile -%}
        <div class="slider-buttons no-js-hidden medium-hide">
          <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}" style="transform: rotate(90deg);">{% render 'icon-caret' %}</button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">2</span>
          </div>
          <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}"  style="transform: rotate(270deg);">{% render 'icon-caret' %}</button>
        </div>
      {%- endif -%}
    </slider-component>
</div>
