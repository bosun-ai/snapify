{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
#reopenButton {
    color: {{ section.settings.text_color_button }}; /* Color from the provided style */
  }
{%- endstyle -%}
 <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<button id="reopenButton" class="button button--primary newsletter-form__button" name="commit" aria-label="Sign up for free promo"
        style="color: {{ section.settings.text_color_button }};margin-top:2rem;background-color: #17161C; display: none;">
    {{ 'sections.popup.closed_text' | t }}
</button>
<div id="myModal" class="modal isolate{% unless section.settings.full_width %} page-width{% endunless %}">
 <div class="modal-content popupContainer" style="background: #fafafa;">
       <div id="title" style='background: #2255ff; padding: 2rem'>
          <h2 style="color:#fafafa;text-align:center;">{{ 'sections.popup.title' | t | newline_to_br }}</h2>
         <span class="close-btn">&times;</span>
        </div>
    <div class="rich-text__wrapper modal-content-text rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'caption' -%}
              <p class="rich-text__caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}" {{ block.shopify_attributes }} style="color: #17161c">
                {{ 'sections.popup.caption' | t }}
              </p>
            {%- when 'text' -%}
              <div class="rich-text__text textblock rte" {{ block.shopify_attributes }} style="color: #17161c; width: 88%; margin: 0 auto;margin-top:4rem">
                {{ 'sections.popup.text' | t }}
              </div>
            {%- when 'button' -%}
              <div class="rich-text__buttons{% if block.settings.button_label != blank and block.settings.button_label_2 != blank %} rich-text__buttons--multiple{% endif %}" {{ block.shopify_attributes }} style="color: {{ section.settings.text_color_button }}">
                {% if block.settings.button_label != blank %}
                  <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}" style="color: {{ section.settings.text_color_button }}">{{ section.settings.button_label | escape }}</a>
                {%- endif -%}
                {%- if block.settings.button_label_2 != blank -%}
                  <a{% if block.settings.button_link_2 == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link_2 }}"{% endif %} class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}" style="color: {{ section.settings.text_color_button }}">{{ block.settings.button_label_2 | escape }}</a>
                {%- endif -%}
              </div>
            {%- when 'signup_form' -%}
           <div {{ block.shopify_attributes }} style="margin-top: 0;margin-bottom: 2rem;">
    {% form 'customer', class: 'newsletter-form', id: NewsletterForm %}
        <input type="hidden" name="contact[tags]" value="newsletter,popup,{{ page.url }}">
        <div class="newsletter-form__field-wrapper">
            <div class="field">
              <input
                  type="hidden"
                  id="FirstNameHidden"
                  name="contact[first_name]"
                  value="{{ form.first_name }}"
              >
              <input
                  type="hidden"
                  id="LastNameHidden"
                  name="contact[last_name]"
                  value="{{ form.last_name }}"
              >
                <input
                    id="PromoForm--{{ section.id }}-0"
                    type="text"
                    class="field__input"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="name"
                    {% if form.errors %}
                        autofocus
                        aria-invalid="true"
                        aria-describedby="Promo-error--{{ section.id }}"
                    {% elsif form.posted_successfully? %}
                        aria-describedby="Promo-success--{{ section.id }}"
                    {% endif %}
                    placeholder="Enter your full name"
                    oninput="splitName('PromoForm--{{ section.id }}-0')"
                    onblur="checkName('{{ 'sections.popup.error_first' | t }}', '{{ 'sections.popup.error_last' | t }}')"
                    required
                >
                <label class="field__label" for="PromoForm--{{ section.id }}-0">
                    {{ 'sections.popup.form_name' | t }}
                </label>
            </div>
            <div class="field">
                <input
                    id="PromoForm--{{ section.id }}-1"
                    type="email"
                    name="contact[email]"
                    class="field__input"
                    value="{{ form.email }}"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    {% if form.errors %}
                        autofocus
                        aria-invalid="true"
                        aria-describedby="Promo-error--{{ section.id }}"
                    {% elsif form.posted_successfully? %}
                        aria-describedby="Promo-success--{{ section.id }}"
                    {% endif %}
                    placeholder="Enter your email"
                    required
                >
                <label class="field__label" for="PromoForm--{{ section.id }}-1">
                    {{ 'sections.popup.form_email' | t }}
                </label>
            </div>
          {% if block.settings.consent != blank %}
            <div id="consent">
              {{ 'sections.popup.marketing' | t }}
            </div>
            {% endif %}
                <div id="errorName" style="color: #a80000;width: 85%; margin-left: auto; margin-right: auto;margin-top: 2rem;font-weight:bold"></div>
                <!-- Submit Button -->
                <button type="submit" class="button button--primary" name="commit" id="Subscribe" aria-label="Sign up for free promo"
                  style="color: {{ section.settings.text_color_button }};margin-top:2rem">
                    {{ 'sections.popup.button' | t }}
                </button>
            {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="Promo-error--{{ section.id }}">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
            {%- endif -%}
        </div>
    {% endform %}
   </div>
    <script>
      $('#PromoForm--{{ section.id }}-0').on('change invalid', function() {
        var textfield = $(this).get(0);
        handleErrors(textfield, '{{ 'sections.popup.error_valueMissing' | t }}', '{{ 'sections.popup.error_typeMismatch' | t }}');
      });
      $('#PromoForm--{{ section.id }}-1').on('change invalid', function() {
        var textfield = $(this).get(0);
        handleErrors(textfield);
      });
    </script>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
<div id="thankYouModal" class="modal isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="modal-content rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}"
      style="padding: 0 1rem;">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        <!-- <span id="closeBtn2" class="close-btn">&times;</span> -->
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading2' -%}
              <{{ block.settings.heading_size_google2 }} class="rich-text__heading rte {{ block.settings.heading_size2 }}" {{ block.shopify_attributes }} style="color: {{ section.settings.text_color_heading }}">
                {{ 'sections.popup.thank_title' | t }}
              </{{ block.settings.heading_size_google2 }}>
            {%- when 'caption2' -%}
              <p class="rich-text__caption {{ block.settings.text_style2 }} {{ block.settings.text_style2 }}--{{ block.settings.text_size2 }}" {{ block.shopify_attributes }} style="color: {{ section.settings.text_color }};text-align:center;text-align-last:center; width:75%;margin: 1rem auto;font-size:1.7rem">
                {{ 'sections.popup.thank_caption' | t }}
              </p>
            {%- when 'text2' -%}
              <div class="rich-text__text textblock rte" {{ block.shopify_attributes }} style="color: {{ section.settings.text_color }};width:65%;margin:3rem auto;font-size: 2rem;margin-bottom:4rem">
                {{ 'sections.popup.thank_text' | t }}
              </div>
            {%- when 'button2' -%}
              <div class="rich-text__buttons" {{ block.shopify_attributes }} style="color: {{ section.settings.text_color_button }}">
                {% if block.settings.button_label2 != blank %}
                  {% if block.settings.button_link2 != blank %}  
                    <a href="{{ block.settings.button_link2 }}" class="button{% if block.settings.button_style_secondary2 %} button--secondary{% else %} button--primary{% endif %}" style="color: {{ section.settings.text_color_button }}">{{ 'sections.popup.thank_button' | t }}</a>
                  {% else %}
                    <a id="closeBtn3" class="button{% if block.settings.button_style_secondary2 %} button--secondary{% else %} button--primary{% endif %}" style="color: {{ section.settings.text_color_button }};cursor: pointer">{{ 'sections.popup.thank_button' | t }}</a>
                  {% endif %}
                  
                {%- endif -%}
              </div>
            {%- when 'share' -%}
              {% assign text = 'sections.popup.share_text' | t %}
              {% assign title = 'sections.popup.share_title' | t %}
              {% assign url = 'sections.popup.share_url' | t %}
              {% render 'share', linkedin: block.settings.linkedin, mail: block.settings.mail, whatsapp: block.settings.whatsapp, 
                                 telegram: block.settings.telegram, other: block.settings.other, share_url: url,
                                 share_text: text, share_title: title %}
          {% endcase %}
        {% endfor %}
          </div>
    </div>
  </div>
</div>
<script>
if ({{section.settings.display_popup}}) {
  document.addEventListener("DOMContentLoaded", function() {
    start();
    displayPopupAfterTime("{{ customer.accepts_marketing }}");
  });
}
</script>

