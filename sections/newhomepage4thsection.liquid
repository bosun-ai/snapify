{%- style -%}
  .containersmall {
    width: 370px;
    height: 175px;
    border: 1px solid #000; /* Schwarz Rand, um den Container sichtbar zu machen */
    /* Weitere Gestaltung nach Bedarf */
  }
  .containerprogressbar {
    width: 300px;
    height: 30px;
    background-color: #D1DCFF;
    /* Weitere Gestaltung nach Bedarf */
  }
  .progressbar {
    width: 270px;
    height: 29px;
    background-color: #00A851;
    /* Weitere Gestaltung nach Bedarf */
  }
  .left-bottom-triangle {
    width: 0;
    height: 0;
    border-style: solid;
    border-width: calc(100vw/8) 0 0 calc(100vw/6.5);
    border-color: transparent transparent transparent #2255ff;
    position: absolute;
    bottom: 0;
    left: 0;
    display: block !important
  }
  .top-right-triangle {
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 calc(100vw/6.5) calc(100vw/8) 0;
    border-color: transparent #2255ff transparent transparent;
    position: absolute;
    top: 0;
    right: 0;
    display: block !important
  }

  .icon-container {
    position: relative;
    /* Set your desired container size, perhaps using percentages for responsiveness */
  }
  .image-with-text p {
    /* hyphens: auto;
    -webkit-hyphens: auto;  */
    text-align: left;
    text-align-last: left;
  }
  .connector {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* This will stretch the SVG to fill the container */
  }
  
  .background4th {
    display: flex;
    justify-content: center; /* Horizontally center */
    align-items: center; /* Vertically center */
    flex-direction: column; /* Stack children vertically */
    background: #fafafa; /* Changed to white background */
    width: 100%;
    padding-top: 10%;
    padding-bottom: 10%;
    position: relative;
    align-items: flex-start;
  }
  .numberrightpackaging {
    margin-left: 30%;
  }
  #eprIconMidConnection {
      top: 0%!important;
      transform: translateY(-94%);
      left: 60%!important;
    }
  @media(min-width: 500px) {
    #eprIconMidConnection {
      left: 75%!important;
    }
  }
  @media(min-width: 750px) {
    #eprIconMidConnection {
      left: 60% !important;
    }
  }
  @media(min-width: 1000px) {
    #eprIconMidConnection {
        left: 75%!important;
      }
  }
  #eprIconLowerConnection {
    transform: translateY(35%);
    bottom: 0%;
  }
  @media(max-width: 750px) {
    #connectingLine2 {
      display:none;
    }
    .background4th {
        padding-bottom: 5rem;
        padding-top: 5rem;
    }
    #progressbarcontainer {
      width: 80%;
