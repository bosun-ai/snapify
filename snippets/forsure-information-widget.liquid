
{% style %}
.information-item {
    display: flex;
    flex-direction: row;
    gap: 10px;
    padding: 10px;
    cursor: pointer;
}
.information-item-title {
    width: 50%;
    font-weight: bold;
    text-decoration: underline;
    cursor: pointer;
}
#no-information {
    width: 50%;
    font-weight: bold;
}
#collapseInformation {
    display: none;
}
#informationList {
    transition: max-height .3s ease-in-out, transform .3s ease-in-out;
    /* overflow: hidden;  */
    /* height: auto; */
}
#informationList.open {
    max-height: 999px;            /* any value larger than the tallest content */
    height: 100%;
}

#informationSettingsOverlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 99;
}

.modal-content {
    width: fit-content;
    height: fit-content;
    top: 50%;
    left: 50%;
    min-width: 70rem;
    transform: translate(-50%, -50%);
    position: absolute !important;
    background-color: #fafafa;
    padding: 20px;
    border-radius: 1rem;
}

.modal-body {
    display: flex;
    gap: 20px;
    padding: 1.5rem;
    font-family: sans-serif;
}

.modal-title {
    margin-left: 15px;
    margin-right: 15px;
    justify-content: space-between;
    display: flex;
}

#buttons {
    display: flex;
    gap: 10px;
    margin: auto;
    width: fit-content;
}

#buttons > div {
    padding: 10px 20px;
    border: 1px solid #ddd;
    border-radius: 6px;
    cursor: pointer;
    background-color: #f9f9f9;
    transition: background-color 0.2s ease;`
}

#buttons > div:hover {
    background-color: #eaeaea;
}

#buttons > div.selected {
    background-color: #2255ff;
    color: #fafafa;
    border-color: #2255ff;
}

#buttons-options {
    display: flex;
    gap: 10px;
    margin: auto;
    width: fit-content;
}

#buttons-options button {
    padding: 10px 20px;
    border: 1px solid #ddd;
    border-radius: 6px;
    cursor: pointer;
    background-color: #f9f9f9;
    transition: background-color 0.2s ease;
}

#buttons-options button:hover {
    background-color: #eaeaea;
}

#buttons-options button.selected {
    background-color: #2255ff;
    color: #fafafa;
    border-color: #2255ff;
}
#informationContainer {
    height: 39%;
    flex-direction: column;
    display: flex;
}

#expandInformation svg path, #collapseInformation svg path {
    fill: #fafafa;
}

#expandInformation svg, #collapseInformation svg {
    height: 32px;
    margin: auto;
}

#informationTitle {
    flex: 0 0 auto;
}

.information-row {
    cursor: pointer;
}

.information-row-active {
    background-color: #2255ff;
    color: #fafafa;
}
.information-table th, .information-table td {
    padding: 10px;
    border: 1px solid #ddd;
}


.information-scroll-wrapper {
  overflow-y: auto;
  border-top: 1px solid #ccc;
  flex: 1 1 auto;
}

/* Ensures sticky header */
.information-table {
  border-collapse: collapse;
  table-layout: fixed;
}

.information-header-cell {
  position: sticky;
  top: 0;
  background: #fafafa;
  font-weight: bold;
  padding: 10px;
  border: 1px solid #ddd;
}


.information-cell {
  padding: 10px;
  border: 1px solid #ddd;
  word-wrap: break-word;
}

.information-row-active {
  background-color: #2255ff;
  color: #fafafa;
}

.information-table th, .information-table td {
    border: none!important;
}

.information-row-active .information-cell div svg .st2-weee {
        stroke: #fafafa;
    }
.information-row-active .information-cell div svg .st5-weee {
    stroke: #fafafa;
    fill: #fafafa;
}
.information-row-active .information-cell div svg .st2-batteries {
    stroke: #fafafa;    
}
.information-row-active .information-cell div svg .st5-batteries {
    stroke: #fafafa;
    fill: #fafafa;
}

.information-row-active .information-cell div svg .st2-packaging {
    stroke: #fafafa;
}
.information-row-active .information-cell div svg .st5-packaging {
    stroke: #fafafa;
    /* fill: #fafafa; */
}

.information-cell svg {
    width: 30px;
    height: 30px;
}

.information-cell-content {
    display: flex;
    width: fit-content;
    /* margin: auto; */
}
.information-cell-content-centered {
    margin: auto;
}
{% endstyle %}

