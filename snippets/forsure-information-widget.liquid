  <script>
    let selectedNotificationMethod = null;
    let selectedInformationTypes = new Set();

    function expandInformation() {
      document.getElementById('deadlineContainer').style.display = 'none';
      document.getElementById('informationContainer').classList.add('open');
      document.getElementById('collapseInformation').style.display = 'flex';
      document.getElementById('expandInformation').style.display = 'none';
      document.getElementById('informationContainer').style.height = '100%';
    }
    
    function collapseInformation() {
        document.getElementById('deadlineContainer').style.display = 'block';
        document.getElementById('informationContainer').classList.remove('open');
        document.getElementById('collapseInformation').style.display = 'none';
        document.getElementById('expandInformation').style.display = 'flex';
        document.getElementById('informationContainer').style.height = '39%';
    }

    function openInformationSettings() {
        document.getElementById('informationSettingsOverlay').style.display = 'block';
        document.getElementById('informationSettingsModal').style.display = 'block';
        document.getElementById('informationSettingsStep1').style.display = 'block';
        selectedNotificationMethod = null;
        selectedInformationTypes.clear();
        getInformationSettings();
        updateButtonStates();
    }

    function closeInformationSettings() {
        document.getElementById('informationSettingsOverlay').style.display = 'none';
        document.getElementById('informationSettingsModal').style.display = 'none';
    }

    function selectNotificationMethod(method) {
        selectedNotificationMethod = method;
        updateButtonStates();
    }

    function selectInformationType(type) {
        if (selectedInformationTypes.has(type)) {
            selectedInformationTypes.delete(type);
        } else {
            selectedInformationTypes.add(type);
        }
        updateButtonStates();
    }

    function updateButtonStates() {
        // Update notification method buttons
        document.getElementById('button-email').classList.remove('selected');
        document.getElementById('button-notification').classList.remove('selected');
        document.getElementById('button-email-notification').classList.remove('selected');
        
        if (selectedNotificationMethod) {
            document.getElementById(`button-${selectedNotificationMethod === 'both' ? 'email-notification' : selectedNotificationMethod}`).classList.add('selected');
        }

        // Update information type buttons
        document.getElementById('button-updates-option').classList.remove('selected');
        document.getElementById('button-warnings-option').classList.remove('selected');
        document.getElementById('button-errors-option').classList.remove('selected');
        
        selectedInformationTypes.forEach(type => {
            document.getElementById(`button-${type}-option`).classList.add('selected');
        });
    }

    async function getInformationSettings() {
        try {
            var data = await unifiedSendRequest(INFORMATION_SETTINGS, {method: 'GET'});
            selectedNotificationMethod = data.notification_method;
            selectedInformationTypes = new Set(data.informationTypes.split(','));
            updateButtonStates();
        } catch (error) {
            console.error(error);
            showMessage(error.message, false);
        }
    }

    async function saveInformationSettings() {
        if (!selectedNotificationMethod) {
            alert('Please select a notification method');
            return;
        }
        if (selectedInformationTypes.size === 0) {
            alert('Please select at least one information type');
            return;
        }
        try {
            var formData = new FormData();
            formData.append('notificationMethod', selectedNotificationMethod);
            formData.append('informationTypes', Array.from(selectedInformationTypes));
            var data = await unifiedSendRequest(INFORMATION_SETTINGS, {formData: formData});
            showMessage('Information settings saved successfully!', true);
            closeInformationSettings();
        } catch (error) {
            console.error(error);
            showMessage(error.message, false);
        }
    }

    async function getInformation() {
        try {
            var data = await unifiedSendRequest(INFORMATION, {method: 'GET'});
            return data;
        } catch (error) {
            console.error(error);
            showMessage(error.message, false);
        }
    }

    var activeInformation = null;
    function updateInformation(data) {
        const scrollWrapper = document.getElementById('informationList');
        scrollWrapper.innerHTML = '';

        const table = document.createElement('table');
        table.className = 'information-table';

        // Create header
        const tableHeader = document.createElement('thead');
        const tableHeaderRow = document.createElement('tr');
        tableHeaderRow.className = 'information-header-row';

        const headers = ['Status', 'Country', 'Report Type', 'PRO'];
        headers.forEach(headerText => {
            const th = document.createElement('th');
            th.className = 'information-header-cell';
            var content = document.createElement('div');
            content.className = 'information-cell-content';
            content.innerText = headerText;
            th.appendChild(content);
            tableHeaderRow.appendChild(th);
        });
        tableHeader.appendChild(tableHeaderRow);
        table.appendChild(tableHeader);

        // Create body
        const tableBody = document.createElement('tbody');
        data.forEach(item => {
            const row = document.createElement('tr');
            row.className = 'information-row';

            if (activeInformation &&
                activeInformation.country === item.country &&
                activeInformation.report_type === item.report_type &&
                activeInformation.pro === item.pro) {
                row.classList.add('information-row-active');
            }

            const values = [item.status, item.country, item.report_type, item.pro];
            values.forEach(val => {
                const td = document.createElement('td');
                td.className = 'information-cell';
                var content = document.createElement('div');
                content.className = 'information-cell-content';
                if (val !== item.pro) {
                    content.classList.add('information-cell-content-centered');
                }

                if (val === 'ERROR') {
                    content.innerHTML = `{% render 'forsure-icon-error' %}`;
                }
                else if (val === 'WARNING') {
                    content.innerHTML = `{% render 'forsure-icon-warning' %}`;
                }else if (val === 'Batteries') {
                    content.innerHTML = getBatteriesSVG();
                }
                else if (val === 'WEEE') {
                    content.innerHTML = getWEEESVG();
                }
                else if (val === 'Packaging') {
                    content.innerHTML = getPackagingSVG();
                }
                else {
                    content.innerText = val;
                }
                td.appendChild(content);
                row.appendChild(td);
            });

            row.onclick = (function(currentItem, currentData) {
                return function() {
                    activeInformation = currentData;
                    const rows = document.getElementsByClassName('information-row');
                    if (currentItem.classList.contains('information-row-active')) {
                        closeInformationDetails();
                        currentItem.classList.remove('information-row-active');
                        activeInformation = null;
                    } else {
                        for (const row of rows) {
                            row.classList.remove('information-row-active');
                        }
                        currentItem.classList.add('information-row-active');
                        openInformationDetails(currentData);
                    }
                };
            })(row, item);

            tableBody.appendChild(row);
        });

        table.appendChild(tableBody);
        scrollWrapper.appendChild(table);
    }

    function openInformationDetails(item) {

        document.getElementById('informationDetails').innerHTML = `
        <h3 style="text-align: center;">Received the following ${item.status[0].toUpperCase() + item.status.slice(1).toLowerCase()}:</h3>    
            <table style="margin: auto;margin-top: 1rem">
                <tr>
                    <td style="font-weight: bold;width: 50%;">Country</td>
                    <td>${item.country}</td>
                </tr>
                <tr>
                    <td style="font-weight: bold;width: 50%;">Report Type</td>
                    <td>${item.report_type}</td>
                </tr>
                <tr>
                    <td style="font-weight: bold;width: 50%;">PRO</td>
                    <td>${item.pro}</td>
                </tr>
                <tr>
                    <td style="font-weight: bold;width: 50%;">Description</td>
                    <td>${item.description}</td>
                </tr>
            </table>
        `;
        document.getElementById('informationDetailsContainer').style.display = 'block';
        document.getElementById('mapContainer').style.display = 'none';
    }

    function closeInformationDetails() {
        document.getElementById('informationDetailsContainer').style.display = 'none';
        document.getElementById('mapContainer').style.display = 'block';
    }

    waitForPermission(function() {
        if (window.userPermissions['forsure-dashboard']) {
          getInformation().then(data => {
            updateInformation(data);
          });
      
          setInterval(() => {
            getInformation().then(data => {
                {% comment %} updateInformation(data); {% endcomment %}
            });
          }, 10000);
        }
      });
  </script>