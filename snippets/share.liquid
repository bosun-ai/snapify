<script>
  function shareLinkedIn() {
    const shareNewsletter = '{{ share_url }}?newsletter=rli';
    const siteURL = encodeURIComponent(shareNewsletter);
    const title = encodeURIComponent('{{ share_title }}');
    const summary = encodeURIComponent('{{ share_text }} #ForSURE');
    const url = 'https://www.linkedin.com/sharing/share-offsite/?mini=true&url='+ siteURL + '&title='+title+'&summary='+summary;
    window.open(url, '_blank');
}

  function shareEmail() {
      const shareNewsletter = '{{ share_url }}?newsletter=rem';
      const subject = '{{ share_title }}';
      const body = '{{ share_text }} ' + shareNewsletter;
      window.location.href = `mailto:?subject=${subject}&body=${body}`;
  }
  
  function shareWhatsApp() {
      const shareNewsletter = ' {{ share_url }}?newsletter=rwa';
      const text = '{{ share_text }}';
      const url = 'https://api.whatsapp.com/send/?text=' + encodeURIComponent(text) + encodeURIComponent(shareNewsletter) + '&type=custom_url&app_absent=0';
      // const url = `https://wa.me/?text=${encodeURIComponent(text)}`;
      window.open(url, '_blank');
  }
  
  function shareTelegram() {
      const shareNewsletter = '{{ share_url }}?newsletter=rtg';
      const text = '{{ share_text }}';
      const url = 'https://t.me/share/url?url='+encodeURIComponent(shareNewsletter)+'&text='+encodeURIComponent(text);
      window.open(url, '_blank');
  }
  
  function copyToClipboard() {
      const shareNewsletter = '{{ share_url }}?newsletter=rcp';
      const el = document.createElement('textarea');  // Create a <textarea> element
      el.value = shareNewsletter;  // Set its value to the link you want to copy
      document.body.appendChild(el);  // Append it to the body
      el.select();  // Select the content
      document.execCommand('copy');  // Copy it to the clipboard
      document.body.removeChild(el);  // Remove the <textarea> element
  
      // Show notification
      const notification = document.getElementById("copyNotification");
      notification.style.display = "block";
      setTimeout(() => {
          notification.style.display = "none";
      }, 2000);  // Hide after 2 seconds
  }

</script>