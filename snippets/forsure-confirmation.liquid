{% comment %}
Renders a simple success/fail message

Usage:
{% render 'forsure-confirmation' %}
{% endcomment %}
<style>
#validateModal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 100;
}

.modal-content-validation {
    position: absolute;
    border-radius: 25px;
    border-width: 0.2rem;
    border-style: solid;
    border-color: #17161c;
    width: 90%;
    max-width: 450px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.modalContainerValidation {
  border-radius: 3rem;
  overflow: hidden;
}
</style>
<div id="validateModal" class="modal losensitive" style="display: none;">
 <div class="modal-content-validation modalContainerValidation" style="background: #fafafa;">
       <div id="title" style="background: #2255ff; padding: 2rem">
          <h2 id="validateModalTitle" style="color:#fafafa;text-align:center;">Title</h2>
        </div>
    <div class="rich-text__wrapper modal-content-text rich-text__wrapper--center">
      <div class="rich-text__blocks center"><div id="validateModalText" class="rich-text__text textblock rte" style="color: #17161c; width: 88%; margin: 0 auto;margin-top:4rem;text-align: justify;text-align-last: left;">
        Text
      </div>
        <div style="margin-top: 2rem;margin-bottom: 2rem;">
          <button id="validateModalCloseButton" class="button" style="background-color: #17161c;margin-right: 2rem;" onclick="closeConfirmationModal()">Close</button>
          <button class="button" id="validateModalSendButton">Send</button>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
function showConfirmationMessage(title, text, cancel, continueButton, onsuccess) {
  document.getElementById('validateModalTitle').textContent = title;
  document.getElementById('validateModalText').innerHTML = text;
  document.getElementById('validateModalCloseButton').textContent = cancel;
  var sendButton = document.getElementById('validateModalSendButton');
  sendButton.textContent = continueButton;
  sendButton.onclick = onsuccess;
  document.getElementById('validateModal').style.display = 'block';
}
function closeConfirmationModal() {
  document.getElementById('validateModal').style.display = 'none';
}
</script>